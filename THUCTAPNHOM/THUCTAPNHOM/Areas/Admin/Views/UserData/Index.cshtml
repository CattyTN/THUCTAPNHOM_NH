@model List<THUCTAPNHOM.Models2.MEMBER>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row m-t-30">
    <div class="col-md-12">
        <!-- USER DATA-->
        <div class="user-data m-b-30">
            <h3 class="title-3 text-center m-b-30">
                <i class="zmdi zmdi-account-calendar"></i>Dữ Liệu Người Dùng
            </h3>
            <form action="/Admin/UserData/Filter_Member" class="table-data__tool" method="post">
                <div class="table-data__tool-left">
                    <div class="rs-select2--light rs-select2--md">
                        <select class="js-select2" name="member_property">
                            <option selected="selected">Phân loại</option>
                            <option value="2">Người dùng</option>
                            <option value="1">Nhân viên</option>
                        </select>
                        <div class="dropDownSelect2"></div>
                    </div> 
                    <button id="filter_member_button" class="au-btn-filter">
                        <input type="submit" value="Lọc"/>
                    </button>
                </div>                
            </form>
            <div class="table-responsive table-data">
                <table class="table">
                    <thead>
                        <tr>
                            <td></td>
                            <td>ID</td>
                            <td>Tên </td>                           
                            <td>Địa chỉ</td>
                            <td>Số điện thoại</td>
                            <td>Vai trò</td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td></td>
                            <td>
                                <div class="table-data__info">
                                    <h6>@item.member_id</h6>
                                </div>
                            </td>
                            <td>
                                <div class="table-data__info">
                                    <h6>@item.name</h6>
                                    <span>
                                        <a>@item.username</a>
                                    </span>
                                </div>
                            </td>
                            <td>
                                <div class="table-data__info">
                                    <h6>@item.address</h6>
                                </div>
                            </td>
                            <td>
                                <div class="table-data__info">
                                    <h6>@item.phone_number</h6>
                                </div>
                            </td>
                            <td>
                                @if (@item.role == 0)
                                {
                                    <span class="role admin">Quản trị viên</span>
                                }
                                else if (item.role == 1)
                                {
                                    <span class="role member">Nhân viên</span>
                                }
                                else
                                {
                                    <span class="role user">Khách hàng</span>
                                }
                            </td>                            
                            <td>
                                <div class="table-data-feature">
                                    <div id="sendModal" class="modal" tabindex="-1" role="dialog">
                                        <div class="modal-dialog" role="document">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title">Gửi thông điệp cho khách hàng</h5>
                                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                        <span aria-hidden="true">&times;</span>
                                                    </button>
                                                </div>
                                                <div class="modal-body">
                                                    <label for="message" class=" form-control-label">Gửi thông điệp cho khách hàng có id @item.member_id</label>
                                                    <input type="text" id="message" placeholder="Nội dung" class="form-control">
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="submit" class="btn btn-primary" data-dismiss="modal">Gửi</button>
                                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    @if (item.role == 2)
                                    {
                                        <button class="item" data-toggle="modal" data-target="#sendModal" data-placement="top" title="send">
                                            <i class="zmdi zmdi-mail-send"></i>
                                        </button>
                                    }
                                    
                                </div>
                            </td>
                        </tr>
                        }

                    </tbody>
                </table>
            </div>
            <div class="user-data__footer">
                <button class="au-btn au-btn-load">Xem thêm</button>
            </div>
        </div>
        <!-- END USER DATA-->
    </div>
   
</div>

